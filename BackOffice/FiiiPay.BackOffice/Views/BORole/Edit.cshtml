@model FiiiPay.BackOffice.Models.AccountRole
<div class="pagebody">
    <form class="form-horizontal" id="editRoleForm">
        @Html.HiddenFor(t => t.Id)
        <div class="form-group">
            <label class="col-sm-2 control-label" for="Name">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="Code">Description</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(t => t.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <input type="button" class="btn btn-primary" onclick="SubmitEditRoleForm()" value="提交" />
            </div>
        </div>
    </form>
</div>
<script>
    $(function () {
        $("#editRoleForm").jqValidate({
            rules: {
                Name: { required:true, maxlength:50},
                Description: { maxlength: 100 }
            }
        });
    })
</script>